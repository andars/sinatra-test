<ul>
    <% @files.each do |file| %>
        <li>
            <a href='/view/<%= file.id %>'> <%= file.filename%> </a> - <%= file.user.username %> - <%= format_time(file.created_time)%>
            <a href='/file/<%= file.id %>/delete'> Delete </a>  
        </li>
    <% end %>
</ul>
